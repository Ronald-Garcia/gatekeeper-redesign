    "hono": "^4.7.1",
    "pg": "^8.13.3",
    "pnpm": "^10.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.11",
    "prettier": "3.5.1",
